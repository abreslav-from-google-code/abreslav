program a;
var
  a : Integer;
begin
  1:|a := 1 !{{$a == 1}};
  1:|a := 1 + 1 !{{$a == 2}};
  1:|a := 1 - 1 !{{$a == 0}};
  1:|a := -1 !{{$a == -1}};
  1:|a := +1 !{{$a == 1}};
  1:|a := 2 * 2 !{{$a == 4}};
  1:|a := 2 div 2 !{{$a == 1}};
  1:|a := 3 div 2 !{{$a == 1}};
  1:|a := 2 div 3 !{{$a == 0}};
  1:|a := 2 mod 3 !{{$a == 2}};
  1:|a := 3 mod 3 !{{$a == 0}};
  1:|a := 3 mod 2 !{{$a == 1}};
  1:|a := 1 + 3 mod 2 !{{$a == 2}};
  1:|a := 1 + 3 * 2 !{{$a == 7}};
  1:|a := (1 + 3) * 2 !{{$a == 8}};
end.